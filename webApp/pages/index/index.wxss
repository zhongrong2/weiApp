/**index.wxss**/
/* 头部样式 */
.header {
  width: 92%;
  height: 36rpx;
  background-color: #F2F2F2;
  margin: 0 auto;
  padding: 9rpx 30rpx;
  line-height: 36rpx;
}
.location {
  height: 36rpx;
  float: left;
  margin-right: 20rpx;
  border-radius: 10rpx;
  background-color: #2D2F7D;
  font-size: 24rpx;
  color: #fffefe;
  text-align: center;
  line-height: 36rpx;
}
.locationTxt {
  float: left;
  font-size: 24rpx;
  color: #999999;
}
/* banner样式 */
.banner {
  width: 100%;
  height: 326rpx;
  float: left;
  position: relative;
  top: 0rpx;
  left: 0rpx;
}
.banner swiper{
  width: 100%;
  height: 100%;
}
.banner swiper image{
  width: 100%;
  height: 100%;
}
.inform {
  width: 630rpx;
  height: 36rpx;
  background-color: #FFFFFF;
  box-shadow: 0rpx 3rpx 18rpx 0rpx rgba(239, 45, 41, 0.15);
  position: absolute;
  left: 30rpx;
  right: 30rpx;
  bottom: -56rpx;
  padding: 20rpx 30rpx;
  line-height: 36rpx;
}
.inform image{
  width: 38rpx;
  height: 36rpx;
  float: left;
}
.infor-list {
  width: 90%!important;
  float: left;
  font-size: 22rpx;
  color: #b2b2b2;
  padding-left: 16rpx;
}
.swiper-item {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.staitc {
  font-size: 24rpx;
  color: #999999;
  float: left;
}
.priceBox {
  float: left;
  padding-left: 20rpx;
}
.priceBox text{
  padding-right: 15rpx;
}
.blank{
  width: 100%;
  height: 56rpx;
}
/* 内容导航样式 */
.con-nav {
  height: auto;
  float: left;
  padding: 30rpx 105rpx;
}
.con-nav-item {
  width: 110rpx;
  float: left;
  margin-right: 105rpx;
}
.con-nav-item:last-child {
  margin-right: 0rpx;
}
.con-nav-item image{
  width: 82rpx;
  height: 82rpx;
  display: block;
  margin: 0 auto;
}
.con-nav-item text{
  display: block;
  font-size: 26rpx;
  color: #808080;
  padding-top: 10rpx;
  text-align-last: center;
}
/* 内容banner样式 */
.con-banner {
  width: 690rpx;
  height: 240rpx;
  margin: 0 30rpx;
  background-color: #FFB034;
}
.con-banner swiper {
  width: 100%;
  height: 100%;
}
.con-banner image{
  width: 100%;
  height: 100%;
}
/* 热卖商品样式 */
.best-sellers {
  float: left;
  width: 690rpx;
  margin: 30rpx 30rpx 30rpx;
}
.best-sellers-title {
  width: 100%;
  float: left;
  padding-bottom: 26rpx;
  border-bottom: 1rpx solid #f1f1f1;
}
.sellers-title-left {
  float: left;
}
.sellers-title-left text {
  font-size: 30rpx;
  color: #666666;
  padding: 0rpx 10rpx;
  border-left: 2rpx solid #2c2e7e;
}
.sellers-title-right {
  float: right;
}
.sellers-title-right text{
  font-size: 26rpx;
  color: #b2b2b2;
  padding-right: 10rpx;
}
.sellers-title-right image{
  width: 18rpx;
  height: 24rpx;
}
.con-sellers{
  width: 100%;
  float: left;
  padding-top: 30rpx;
}
.con-sellers-item {
  width: 334rpx;
  /* height: 500rpx; */
  background-color: #F2F2F2;
  float: left;
  border-radius: 10rpx;
  margin-right: 22rpx;
  margin-bottom: 22rpx;
  padding-bottom: 10rpx;
}
.con-sellers-item:nth-child(2n) {
  margin-right: 0rpx;
}
.con-sellers-item image{
  width: 334rpx;
  height: 350rpx;
  background-color: #2c2e7e;
}
.sellers-item-con {
  padding: 20rpx 30rpx 0rpx 20rpx;
  text-align: left;
}
.sell-title {
  font-size: 28rpx;
  color: #666666;
  display: block;
  padding-bottom: 16rpx;
}
.sell-des {
  font-size: 20rpx;
  color: #b2b2b2;
  display: block
}
.sell-prices{
  display: block;
  height: 30rpx;
  line-height: 30rpx;
  padding-top: 20rpx;
}
.sell-price {
  width: 40%;
  float: left;
  font-size: 28rpx;
  color: #fb4e44;
}
.sell-inte {
  width: 40%;
  float: right;
  font-size: 22rpx;
  color: #5674CE;
  text-align: right;
}