/* pages/sign.wxss */
.con {
  height: 460rpx;
  background-color: #2C2E7e;
  display: block;
  margin: 0 auto;
  padding: 100rpx 294rpx 0rpx;
  position: relative;
  left: 0rpx;
  top: 0rpx;
}
.logo {
  width: 162rpx;
  height: 162rpx;
  background-color: #FFFFFF;
  display: block;
  border-radius: 10rpx;
}
.logo image{
  width: 100%;
  height: 100%;
}
.sign {
  width: 550rpx;
  height: 720rpx;
  display: block;
  position: absolute;
  left: 100rpx;
  right: 100rpx;
  top: 346rpx;
  border-radius: 10rpx;
  background-color: #F1F2F1;
  box-shadow: 0rpx 1rpx 15.66rpx 2.34rpx rgba(44, 46, 126, 0.25);
}
.sign form {
  width: 510rpx;
  float: left;
  margin: 20rpx 20rpx 0rpx;
}
.section {
  padding: 50rpx 0rpx 10rpx 16rpx;
  font-size: 24rpx;
  color: #808080;
  border-bottom: 1rpx solid #2C2E7e;
  display: block;
}
.section input {
  width: 100%;
  display: inline-block;
}
.section input[name='code'] {
  width: 55%;
}
.getcode {
  height: 50rpx;
  background-color: #2c2e7e;
  font-size: 20rpx;
  color: white;
  /* display: inline-block; */
  float: right;
  text-align: center;
  line-height: 50rpx;
  padding: 0 10rpx;
  border-radius: 10rpx;
}
/*checkbox 整体大小  */
checkbox {
  width: 26rp;
  height: 26rpx;
}
/*checkbox 选项框大小  */
checkbox .wx-checkbox-input {
  width: 26rpx;
  height: 26rpx;
}
/*checkbox选中后图标样式  */
checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  width: 26rpx;
  height: 26rpx;
  line-height: 26rpx;
  text-align: center;
}
.title {
  margin-top: 100rpx;
  text-align: center;
  font-size: 20rpx;
  color: #808080;
}
.title text {
  margin-left: 10rpx;
}
.proto {
  color: #2c2e7e;
}
.submit {
  width: 330rpx;
  height: 50rpx;
  margin: 30rpx auto;
  font-size: 24rpx;
  color: white;
  line-height: 50rpx;
  background-color: #2c2e7e;
}

/* 下拉框样式 */
.selectbox {
  position: relative;
  top: 0rpx;
  left: 0rpx;
}
.section input[name='carClass'] {
  width: 85%;
}
.select-list image {
  width: 40rpx;
  height: 40rpx;
}
.section-select {
  width: 87%;
  position: absolute;
  top: 107rpx;
  background-color: white;
  z-index: 5;
  overflow: hidden;
  padding: 0rpx 10rpx;
}
.select-one {
  height: 75rpx;
  line-height: 75rpx;
  border-bottom: 1px solid #ccc;
}
.select-one:last-child {
  border-bottom: 0rpx;
}