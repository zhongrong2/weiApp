/* /pages/refuel/refuel.wxss */
/* 加油站信息样式 */
.OilStationInfo {
  width: 86.5%;
  float: left;
  background-color: #f2f2f2;
  padding: 44rpx 50rpx;
}
.OilStationInfo view{
  display: block;
  margin-bottom: 30rpx;
  font-size: 28rpx;
  color: #666666;
}
.OilStationInfo view:last-child{
  margin-bottom: 0rpx;
}
.OilStationInfo text{
  color: #999999;
}
/* 优惠券样式 */
.coupon {
  width: 89%;
  height: 80rpx;
  float: left;
  margin: 0 40rpx;
  line-height: 80rpx;
}
.coupontitle {
  font-size: 28rpx;
  color: #808080;
  float: left;
}
.coupon-right {
  font-size: 22rpx;
  color: #b2b2b2;
  float: right;
}
.coupon-right text{
  margin-right: 50rpx;
}
.coupon-right image{
  width: 14rpx;
  height: 26rpx;
}
/* 支付金额样式 */
.payInfo {
  width: 100%;
  float: left;
}
.payInfo-border {
  width: 100%;
  height: 20rpx;
  background-color: #F2F2F2;
  float: left;
}
.payInfo-box {
  width: 90%;
  height: 226rpx;
  float: left;
  padding-top: 60rpx;
  padding-left: 40rpx;
}
.payInfo-box-item {
  display: block;
  font-size: 28rpx;
  color: #999999;
  padding-bottom: 20rpx;
}
.payInfo-box-total {
  text-align: right;
  font-size: 32rpx;
  color: #2e2e2e;
}